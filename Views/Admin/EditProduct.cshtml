@model ComicsStores.Models.Product
<h2>Редакировать продукт</h2>




@using (Html.BeginForm("EditProduct", "Admin", method: FormMethod.Post))
{


    <div class="well well-lg container ">
        <div class="row">
            <div class="col-lg-3">
               
                    <div><b>Индефикатор продкта: </b></div><br />
               
                    <div><b>Название: </b></div><br />
                    <div style="padding-top:15px"><b>Цена: </b></div><br />

                    <div style="padding-top:10px"><b>Cсылка на фотографию:</b></div>
                    
                     <div style="padding-top:140px"><b>Дата выхода: </b></div><br />
                    <div><b>Компания: </b></div><br />
                    <div><b>Категория товара: </b> </div><br />
                <div ><b>Описание товара: </b></div>    <br /> 
                    </div>

                    <div class="col-lg-9">
                        <div>@Html.EditorFor(model => model.Id)</div><br />
                        <div>@Html.EditorFor(model => model.Name)</div><br />
                        <div>@Html.EditorFor(model => model.Price)</div><br />
                        <div>
                            @Html.EditorFor(model => model.Url)
                        </div><br />
                            <div><img src="@Model.Url" height="100px" /></div>
                    <br />
                   
                         
                        
                   <div> @Html.EditorFor(model => model.Date)</div><br />
            <div>  @Html.EditorFor(model => model.Brand )</div><br />
                        <div>
                            <select id="Category" name="Category" class="form-control">
                                <option value="1">Комиксы</option>
                                <option value="2">Манга</option>
                                <option value="3">Арттбуки</option>
                                <option value="4">Атрибутика и сувиниры</option>

                            </select>
                            </div><br />
                            <div>

                                <textarea class="form-control" style="width:100%;height:90px" rows="10" cols="94" name="Discription">@Model.Discription</textarea>
                            </div><br />

                        </div>

</div>

        <input type="submit" class="btn btn-success" value="сохранить" />

    </div>

    
}