<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ComicsStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/fontawesome/font-awesome.css")
    @Styles.Render("~/Content/fonts/fontawesome-webfont.eot")
    @Styles.Render("~/Content/fonts/fontawesome-webfont.woff")
    @Styles.Render("~/Content/fontawesome/font-awesome.min.css")
    <script src='@Url.Content("~/Scripts/jquery-1.8.2.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type='text/javascript'>         </script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type='text/javascript'></script>

</head>
<body style="width:90%;height:90%">
    <div class="container body-content">
        <div>
            <h1>Магазин Комиксов</h1>
            <div align="right">
                <div style="font-size:14pt; color:gray"></div>
                <h4> <i class="glyphicon glyphicon-shopping-cart"></i> @Html.ActionLink("Корзина", "Bag", "Shoping")</h4>
            </div>

            @using (Html.BeginForm("index", "Home"))
            {
                <div style="border-bottom:groove; border-top:groove;border-color:lightgray; border-width:thin ">
                    <ul class="nav nav-pills">
                        <li style="width:250px;font-size:17px;">@Html.ActionLink("Главная", "Index", "Home", "", new { @style = "color:black;" })</li>
                        <li style="width:250px;font-size:17px">@Html.ActionLink("Доставка и оплата", "Delivery", "Home", "", new { @style = "color:black;" })</li>
                        <li style="width:250px;font-size:17px">@Html.ActionLink("Конактная информация", "AboutStore", "Home", "", new { @style = "color:black;" })</li>
                        <li style="width:270px;font-size:18px"><div style="padding-top:5px"><input type="text" name="Search" /><button type="submit" class="btn btn-default" style="border:none;background:none;"><i class="glyphicon glyphicon-search "></i></button></div></li>
                    </ul>

                </div>
            }

        </div>
        <br />
              @RenderBody()
    </div>
    <hr />
    <footer>

        <div align="center">
            <p><b>&copy;Created by Dusau Artsiom</b></p>
            <p>
                <b> Contact me:</b>
                <a href="https://github.com/Deemfoss/ComicsStores-" class="fa fa-lg fa-github" aria-hidden="true"></a>
                <a href="https://vk.com/id8936388" class="fa fa-lg fa-vk" aria-hidden="true"></a>
                <a href="https://www.linkedin.com/in/artsiom-dusau/" class="fa fa-lg fa-linkedin" aria-hidden="true"></a>
            </p>
        </div>

    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
